<!DOCTYPE html>
<html>
  <head>
    <title>FurattoPlan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--gem 'gon'で使用-->
    <%= include_gon %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&family=Concert+One&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light " style="background-color: #e3f2fd;">

      <div class = "pf-tatle">Furatto Plan&nbsp;&nbsp;&nbsp;&nbsp;</div>
    <% if user_signed_in? %>

      ようこそ<%= current_user.user_name %>さん！
      <ul class="navbar-nav ml-auto">
      <li><%= link_to ' Home', root_path, class: "fas fa-home" %></li>&nbsp;&nbsp;
      <li><%= link_to ' About', about_path, class: "fas fa-info-circle" %></li>&nbsp;&nbsp;
      <li><%= link_to ' My Page', user_path(current_user), class: "fas fa-user-alt" %></li>&nbsp;&nbsp;
      <li><%= link_to ' Post', new_tourism_path, class: "fas fa-edit" %></li>&nbsp;&nbsp;
      <li><%= link_to ' logout', destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt" %></li>
      </ul>
    <% else %>
      <ul class="navbar-nav ml-auto">
      <li><%= link_to ' Home', root_path, class: "fas fa-home" %></li>&nbsp;&nbsp;
      <li><%= link_to ' About', about_path, class: "fas fa-info-circle" %></li>&nbsp;&nbsp;
      <li><%= link_to ' sign up', new_user_registration_path, class: "fas fa-sign-in-alt" %></li>&nbsp;&nbsp;
      <li><%= link_to ' login', new_user_session_path, class: "fas fa-user-circle" %></li>
      </ul>
    <% end %>
    </nav>
    <%= yield %>

  </body>

</html>
