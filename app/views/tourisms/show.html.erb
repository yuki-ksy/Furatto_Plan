
<% if @tourism.images.present? %>
  <% @tourism.images.each do |image| %>
    <%= attachment_image_tag image, :image, class: "default_image", size: '200x200' %>
  <% end %>
<% else %>
  画像はありません。
<% end %>
<%= @tourism.name %>


<%= @tourism.production %>

<%= @tourism.prefecture.prefecture %>

<%= @tourism.genre.genre %>

<%= @tourism.budget %>


<% if @tourism.user == current_user %>
  <%= link_to 'Edit', edit_tourism_path, class: "btn btn-success" %>
  <%= link_to "Destroy", tourism_path(@tourism.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
<% end %>

<div id="comments-<%= @tourism.id %>">
  <%= render partial: 'comments/comment', locals: { tourism: @tourism,tourism_comment: @tourism_comment ,tourism_comments: @tourism_comments } %>
</div>
